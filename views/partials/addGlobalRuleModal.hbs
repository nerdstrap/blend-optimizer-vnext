<div>
    <a id="addGlobalRule" class="btn btn-warning" data-toggle="modal" data-target="#addGlobalRuleModal" href="#">{{i18n "button.add"}}</a>
</div>
<div class="modal inmodal" id="addGlobalRuleModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <i class="fa {{i18n "icon.close"}}"></i>
                </button>
                <h4 class="modal-title">{{i18n "area.addGlobalRule.title"}}</h4>
                <small class="font-bold">{{i18n "area.addGlobalRule.description"}}</small>
            </div>
            <div class="modal-body">
                <form id="addGlobalRuleForm" class="blend-optimizer-form">
					{{#globalRules}}
                        <h3>{{i18n "label.if"}}</h3>
                        <div class="predicate-group">
							{{> "predicateGroup"}}
                        </div>
                        <br/>
                        <h3>{{i18n "label.then"}}</h3>
                        <div class="function-group">
							{{> "function"}}
                        </div>
					{{/globalRules}}
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">{{i18n "button.close"}}</button>
                <button type="button" class="btn btn-primary">{{i18n "button.add"}}</button>
            </div>
        </div>
    </div>
</div>
