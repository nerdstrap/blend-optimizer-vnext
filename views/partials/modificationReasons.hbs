<div class="modification-reasons">
    <h3>{{i18n "feature.modificationReasons.title"}}</h3>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{i18n "label.displayOrder"}}</th>
            <th>{{i18n "label.modificationReason"}}</th>
        </tr>
        </thead>
        <tbody id="modificationReasons" class="sortable">
		{{#modificationReasons}}
            <tr id="{{id}}">
                <td><span class="fa {{i18n "icon.sortUpDown"}}"></span>{{displayOrder}}</td>
                <td>{{modificationReason}}</td>
            </tr>
		{{/modificationReasons}}
        </tbody>
        <tfoot>
        <tr>
            <th colspan="2">
                &nbsp;
            </th>
        </tr>
        </tfoot>
    </table>
</div>
