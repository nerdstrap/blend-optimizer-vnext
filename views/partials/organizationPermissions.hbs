<div class="overflow-x-scroll">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{i18n "label.org"}}</th>
            <th>{{i18n "label.department"}}</th>
            <th>
                <div class="checkbox checkbox-primary">
                    <input id="orgEnabled" name="orgEnabled" type="checkbox" class="styled" {{#if orgEnabled}}checked{{/if}}>
                    <label for="orgEnabled">{{i18n "label.enabled"}}</label>
                </div>
            </th>
            <th>
                <div class="checkbox checkbox-primary">
                    <input id="lotMaintenanceEnabled" name="lotMaintenanceEnabled" type="checkbox" class="styled">
                    <label for="lotMaintenanceEnabled">{{i18n "label.lotMaintenanceEnabled"}}</label>
                </div>
            </th>
        </tr>
        </thead>
        <tbody>
		{{#organizations}}
            <tr id="{{id}}">
                <td>{{org}}</td>
                <td>{{department}}</td>
                <td>
                    <div class="checkbox checkbox-primary">
                        <input id="orgEnabled{{@index}}" name="orgEnabled{{@index}}" type="checkbox" class="styled" {{#if orgEnabled}}checked{{/if}}>
                        <label for="orgEnabled{{@index}}">{{i18n "label.enabled"}}</label>
                    </div>
				</td>
                <td>
                    <div class="checkbox checkbox-primary">
                        <input id="lotMaintenanceEnabled{{@index}}" name="lotMaintenanceEnabled{{@index}}" type="checkbox" class="styled" {{#if lotMaintenanceEnabled}}checked{{/if}}>
                        <label for="lotMaintenanceEnabled{{@index}}">{{i18n "label.lotMaintenanceEnabled"}}</label>
                    </div>
                </td>
            </tr>
		{{/organizations}}
        </tbody>
        <tfoot>
        <tr>
            <th colspan="4">
                &nbsp;
            </th>
        </tr>
        </tfoot>
    </table>
</div>
