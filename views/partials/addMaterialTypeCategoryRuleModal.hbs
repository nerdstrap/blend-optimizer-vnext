                                <label for="addMaterialCategoryTypeRuleLow" class="control-label">{{i18n "label.low"}}</label>
                                <div class="input-group">
                                    <input id="addMaterialCategoryTypeRuleLow" name="addMaterialCategoryTypeRuleLow" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="addMaterialCategoryTypeRuleHigh" class="control-label">{{i18n "label.high"}}</label>
                                <div class="input-group">
                                    <input id="addMaterialCategoryTypeRuleHigh" name="addMaterialCategoryTypeRuleHigh" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="addMaterialCategoryTypeRuleDeviationHigh" class="control-label">{{i18n "label.deviationHigh"}}</label>
                                <div class="input-group">
                                    <input id="addMaterialCategoryTypeRuleDeviationHigh" name="addMaterialCategoryTypeRuleDeviationHigh" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="addMaterialCategoryTypeRuleConsumptionFactor" class="control-label">{{i18n "label.consumptionFactor"}}</label>
                                <div class="input-group">
                                    <select id="addMaterialCategoryTypeRuleConsumptionFactor" name="addMaterialCategoryTypeRuleConsumptionFactor" class="form-control">
                                        <option value="" selected="selected" disabled="disabled">{{i18n "label.consumptionFactor"}}</option>
										{{#consumptionFactors}}
                                            <option value="{{id}}">{{i18n consumptionFactor}}</option>
										{{/consumptionFactors}}
