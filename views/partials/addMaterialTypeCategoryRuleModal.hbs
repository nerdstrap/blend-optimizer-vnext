                                <label for="addMaterialCategoryTypeRuleName" class="control-label">{{i18n "label.materialTypeCategory"}}</label>
                                <div class="input-group">
                                    <select id="addMaterialCategoryTypeRuleName" name="addMaterialCategoryTypeRuleName" class="form-control">
                                        <option value="" selected="selected" disabled="disabled">{{i18n "label.materialTypeCategory"}}</option>
										{{#materialTypeCategories}}
