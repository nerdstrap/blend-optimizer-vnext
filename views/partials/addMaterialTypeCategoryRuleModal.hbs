                                <label for="addMaterialCategoryTypeRuleType" class="control-label">{{i18n "label.materialCategoryRuleType"}}</label>
                                <div class="input-group">
                                    <select id="addMaterialCategoryTypeRuleType" name="addMaterialCategoryTypeRuleType" class="form-control">
                                        <option value="" selected="selected" disabled="disabled">{{i18n "label.materialCategoryRuleType"}}</option>
										{{#materialCategoryRuleTypes}}
