<div class="prioritized-lots">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">{{i18n "feature.prioritizedLots.title"}}</h3>
        </div>
		{{#if manager}}
            <div class="panel-body">
                <p>
                    <span class="fa {{i18n "icon.quickSelect"}}"></span> {{i18n "feature.quickSelect.description"}}
                </p>
                <form id="prioritized-lots-form" name="prioritized-lots-form" class="blend-optimizer-form">
                    <div class="form-group">
                        <label for="prioritizedSKUs" class="control-label sr-only">{{i18n "label.skus"}}</label>
                        <div class="input-group">
                            <select id="prioritizedSKUs" name="prioritizedSKUs" data-placeholder="{{i18n "label.skus"}}" class="form-control chosen-select width-col-sm-4" multiple>
								{{#materialTypes}}
                                    <option value="{{sku}}">{{sku}}</option>
								{{/materialTypes}}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
		{{/if}}
        <div class="panel-body">
            <p>
                <span class="fa {{i18n "icon.dragDrop"}}"></span> {{i18n "feature.dragDrop.description"}}
            </p>
        </div>
        <ul id="prioritizedLots" class="list-group sortable">
			{{#prioritizedLots}}
                <li id="{{id}}" class="list-group-item {{type}} {{sku}}">
					{{> "collapsible-lot"}}
                </li>
			{{/prioritizedLots}}
        </ul>
    </div>
</div>

