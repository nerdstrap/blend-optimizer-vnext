<div class="material-category-badges">
	<h3>{{i18n "feature.materialCategoryBadges.title"}}</h3>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{i18n "label.segmentValue"}}</th>
            <th>{{i18n "label.longName"}}</th>
            <th>{{i18n "label.badge"}}</th>
            <th>{{i18n "label.color"}}</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
		{{#materialCategoryBadges}}
            <tr id="{{id}}">
                <td>{{segmentValue}}</td>
                <td>{{longName}}</td>
                <td>{{badge}}</td>
                <td>{{color}}</td>
                <td>
                    <button id="editBadge" type="button" class="btn btn-primary">{{i18n "button.edit"}}</button>
                </td>
            </tr>
		{{/materialCategoryBadges}}
        </tbody>
        <tfoot>
        <tr>
            <th colspan="5">
                &nbsp;
            </th>
        </tr>
        </tfoot>
    </table>
</div>

