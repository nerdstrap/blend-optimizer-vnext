<div>
    <a id="addEquipmentRule" class="btn btn-warning" data-toggle="modal" data-target="#addEquipmentRuleModal" href="#">{{i18n "button.add"}}</a>
</div>
<div class="modal inmodal" id="addEquipmentRuleModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span class="fa {{i18n "icon.close"}}"></span>
                </button>
                <h4 class="modal-title">{{i18n "area.addEquipmentRule.title"}}</h4>
                <small class="font-bold">{{i18n "area.addEquipmentRule.description"}}</small>
            </div>
            <div class="modal-body">
                <form id="addEquipmentRuleForm" class="blend-optimizer-form">

                    <div class="row margin-bottom-20">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="addEquipmentRuleType" class="control-label">{{i18n "label.equipmentRuleType"}}</label>
                                <div class="input-group">
                                    <select id="addEquipmentRuleType" name="addEquipmentRuleType" class="form-control">
                                        <option value="" selected="selected" disabled="disabled">{{i18n "label.equipmentRuleType"}}</option>
										{{#equipmentRuleTypes}}
                                            <option value="{{id}}">{{equipmentRuleType}}</option>
										{{/equipmentRuleTypes}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <h3>{{i18n "label.if"}}</h3>
                            <div class="form-group">
                                <label for="addEquipmentRuleClass" class="control-label">{{i18n "label.class"}}</label>
                                <div class="input-group">
                                    <select id="addEquipmentRuleClass" name="addEquipmentRuleClass" class="form-control">
                                        <option value="" selected="selected" disabled="disabled">{{i18n "label.class"}}</option>
										{{#classes}}
                                            <option value="{{id}}">{{class}}</option>
										{{/classes}}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <h3>{{i18n "label.then"}}</h3>

                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">{{i18n "button.close"}}</button>
                <button type="button" class="btn btn-primary">{{i18n "button.add"}}</button>
            </div>
        </div>
    </div>
</div>
