<div>
    <a id="addBlendAdditive" data-toggle="modal" data-target="#addBlendAdditiveModal" href="#">{{i18n "button.addBlendAdditive"}}</a>
</div>
<div class="modal inmodal" id="addBlendAdditiveModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <i class="fa {{i18n "icon.close"}}"></i>
                </button>
                <h4 class="modal-title">{{i18n "area.addBlendAdditive.title"}}</h4>
                <small class="font-bold">{{i18n "area.addBlendAdditive.description"}}</small>
            </div>
            <div class="modal-body">
                <ul class="list-unstyled">
                    <li>
						{{#availableAdditiveLots}}
                            <div class="pull-right">
                                <input type="checkbox">
                            </div>
							{{> "lot"}}
						{{/availableAdditiveLots}}
                    </li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">{{i18n "button.close"}}</button>
                <button type="button" class="btn btn-primary">{{i18n "button.add"}}</button>
            </div>
        </div>
    </div>
</div>
