<h3>{{i18n "feature.blendSpecHistory.title"}}</h3>
<table class="table table-striped">
    <thead>
    <tr>
        <th>{{i18n "label.revision"}}</th>
        <th>{{i18n "label.date"}}</th>
        <th>{{i18n "label.username"}}</th>
    </tr>
    </thead>
    <tbody>
	{{#revisions}}
        <tr id="{{id}}">
            <td>{{summary}}</td>
            <td>{{modifiedDate}}</td>
            <td>{{modifiedBy}}</td>
        </tr>
	{{/revisions}}
    </tbody>
    <tfoot>
    <tr>
        <th colspan="3"></th>
    </tr>
    </tfoot>
</table>
