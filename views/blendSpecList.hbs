{{#contentFor "pageHeader"}}
    <div class="page-header">
        <div class="container-fluid">
            <h3>{{i18n "area.blendSpecList.title"}}</h3>
            <ol class="breadcrumb">
				{{#breadcrumbs}}
                    <li><a href="{{href}}">{{title}}</a></li>
				{{/breadcrumbs}}
            </ol>
        </div>
    </div>
{{/contentFor}}

<div class="ibox">
    <div class="ibox-title">
		{{> "ibox-tools"}}
        <h5 class="ibox-header">{{i18n "feature.selectBlend.title"}}</h5>
    </div>
    <div class="ibox-content">
        <form id="blendSpecSearchForm" class="blend-optimizer-form">
            <div class="row margin-bottom-20">
                <div class="col-sm-8">
                    <div class="form-group">
                        <label for="blendSpecName" class="control-label">{{i18n "label.smartSearch"}}</label>
                        <div class="input-group">
                            <input id="blendSpecName" name="blendSpecName" type="text" class="form-control" placeholder="{{i18n "placeholder.smartSearch"}}">
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="filterBlendSpecList" class="control-label">&nbsp;</label>
                        <div class="input-group">
                            <button id="filterBlendSpecList" type="button" class="btn btn-primary">{{i18n "button.search"}}</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{i18n "label.blendSpecName"}}</th>
                <th>{{i18n "label.description"}}</th>
                <th>{{i18n "label.tags"}}</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
			{{#blendSpecs}}
                <tr id="{{id}}">
                    <td>{{name}}</td>
                    <td>{{{description}}}</td>
                    <td>{{tags}}</td>
                    <td>
                        <button id="editBlendSpec" type="button" class="btn btn-primary">{{i18n "button.edit"}}</button>
                        <button id="copyBlendSpec" type="button" class="btn btn-default">{{i18n "button.copy"}}</button>
						{{> "selectPlantsModal" @root}}
                    </td>
                </tr>
			{{/blendSpecs}}
            </tbody>
            <tfoot>
            <tr>
                <th colspan="5">
                    <button id="newBlendSpec" type="button" class="btn btn-warning">{{i18n "button.new"}}</button>
                </th>
            </tr>
            </tfoot>
        </table>
    </div>
</div>

{{#contentFor "pageScripts"}}
    <script src="js/blendSpecList.js"></script>
{{/contentFor}}
