{{#contentFor "pageHeader"}}
    <div class="page-header">
        <div class="container-fluid">
            <h3>{{i18n "area.optimizerMaintenance.title"}}</h3>
        </div>
    </div>
{{/contentFor}}

<div class="row">
    <div class="col-sm-3">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title panel-primary">{{i18n "feature.globalRules.title"}}</h3>
            </div>
            <div class="panel-body">
                <button id="globalRules" type="button" class="btn btn-warning">{{i18n "btn.globalRules"}}</button>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title panel-warning">{{i18n "feature.masterRules.title"}}</h3>
            </div>
            <div class="panel-body">
                <button id="masterRules" type="button" class="btn btn-warning">{{i18n "btn.masterRules"}}</button>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="panel">
            <div class="panel-heading panel-info">
                <h3 class="panel-title">{{i18n "feature.techAdmin.title"}}</h3>
            </div>
            <div class="panel-body">
                <button id="techAdmin" type="button" class="btn btn-warning">{{i18n "btn.techAdmin"}}</button>
            </div>
        </div>
    </div>
</div>

{{#contentFor "pageScripts"}}
    <script src="js/optimizerMaintenance.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

			$('#globalRules').click(function (e) {
                if (e) {
                    e.preventDefault();
                }
                window.location.href = 'global-rules';
            });

			$('#masterRules').click(function (e) {
                if (e) {
                    e.preventDefault();
                }
                window.location.href = 'master-rules';
            });

			$('#techAdmin').click(function (e) {
                if (e) {
                    e.preventDefault();
                }
                window.location.href = 'techAdmin';
            });

        });
    </script>
{{/contentFor}}
