{{> "pageHeader"}}

<div class="ibox">
    <div class="ibox-title">
        <h5>{{i18n "feature.blendSummary.title"}}
            <span id="draftBlendLabel" class="label label-{{draftBlend.label}}">{{i18n draftBlend.status}}</span>
        </h5>
    </div>
    <div class="ibox-content">
        <div class="row">
            <div class="col-sm-4">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>{{{i18n "label.percent"}}}</th>
                        <th>{{i18n "label.sku"}}</th>
                        <th>{{i18n "label.lotNumber"}}</th>
                        <th>{{i18n "label.pounds"}}</th>
                    </tr>
                    </thead>
                    <tbody>
					{{#draftBlend.includedLots}}
                        <tr>
                            <th>{{percentUsed}}</th>
                            <td><span class="label label-{{type}}">{{badge}}</span> {{sku}}</td>
                            <td>{{lotNumber}}</td>
                            <td>{{pounds}}</td>
                        </tr>
					{{/draftBlend.includedLots}}
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="2">
							{{draftBlend.includedLotTotal}}{{{i18n "label.percent"}}}
                        </td>
                        <td colspan="2">
                            <strong>{{i18n "label.blendSize"}}</strong>
                            <span class="blend-weight">{{draftBlend.size}} {{i18n "label.pounds"}}</span>
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <div class="col-sm-4">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>{{i18n "label.spec"}}</th>
						{{#if deviation}}
                            <th>{{i18n "label.deviationLow"}}</th>
						{{/if}}
                        <th>{{i18n "label.low"}}</th>
                        <th>{{i18n "label.actual"}}</th>
                        <th>{{i18n "label.high"}}</th>
						{{#if deviation}}
                            <th>{{i18n "label.deviationHigh"}}</th>
						{{/if}}
                    </tr>
                    </thead>
                    <tbody>
					{{#draftBlend.bottomLineSpecs}}
                        <tr>
                            <th>{{i18n spec}}</th>
							{{#if deviationLow}}
                                <td>{{deviationLow}}</td>
							{{/if}}
                            <td>{{low}}</td>
                            <td>{{actual}}</td>
                            <td>{{high}}</td>
							{{#if deviationHigh}}
                                <td>{{deviationHigh}}</td>
							{{/if}}
                        </tr>
					{{/draftBlend.bottomLineSpecs}}
                    </tbody>
                    <tfoot>
                    <tr>
                        <td {{#if deviation}}colspan="6" {{else}}colspan="4"{{/if}}></td>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <div class="col-sm-4">
                <h3 class="">{{i18n "feature.blendSummary.title"}}</h3>
                <form id="blendSummaryForm" class="blend-optimizer-form">
                    <div class="form-group">
                        <label for="comments" class="control-label">{{i18n "label.comments"}}</label>
                        <div class="input-group">
                            <input id="comments" name="comments" type="text" class="form-control" value="{{comments}}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <button id="printBlend" type="button" class="btn btn-primary">{{i18n "button.print"}}</button>
                        <button id="quitBlend" type="button" class="btn btn-default">{{i18n "button.dashboard"}}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{#contentFor "pageScripts"}}
    <script src="js/finalizeBlend.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
{{/contentFor}}
